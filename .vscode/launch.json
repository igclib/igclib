{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "xc",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [
        "xc",
        "--flight",
        "tests/data/flights/xc_col_agnel.igc",
        "--airspace",
        "tests/data/airspace/france_airspace.txt"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
